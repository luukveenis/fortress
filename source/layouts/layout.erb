<!doctype html>
<html>
  <head>
    <!-- It's important that we can use the snowman: ☃ -->
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>

    <!-- Site descriptions -->
    <meta name="description" content="My personal site">
    <meta name="author" content="Luuk Veenis">

    <!-- Skeleton requires the Raleway font from Google -->
    <link href="//fonts.googleapis.com/css?family=Raleway:400,300,600" rel="stylesheet" type="text/css">

    <%= stylesheet_link_tag "normalize", "skeleton", "all" %>
    <%= javascript_include_tag  "all" %>

    <link rel="icon" type="image/png" href="images/favicon.png">
  </head>

  <body>
    <div class="side-nav">
      <div class="bio">
        <% link_to '/' do %>
          <%= image_tag 'just_me_trimmed.png', width: '200px', class: 'avatar' %>
        <% end %>
        <div class='bio-description'>
          <strong>Luuk Veenis</strong>
          <p>PROGRAMMER • DESIGNER</p>
        </div>
      </div>
      <nav class="vertical">
        <ul>
          <li class="active"><%= link_to 'About Me', '/about' %></li>
          <li><%= link_to 'Blog', '/blog' %></li>
          <li><%= link_to 'Portfolio', '/portfolio' %></li>
          <li><%= link_to 'Resume', '/resume' %></li>
          <li><%= link_to 'Contact', '/contact' %></li>
        </ul>
      </nav>
    </div>
    <div class="main-content">
      <h2>This is my main content</h2>
      <%= yield %>
    </div>
  </body>
</html>
